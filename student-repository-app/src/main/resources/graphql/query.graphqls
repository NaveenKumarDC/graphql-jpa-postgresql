type Query {
	getStudentById(id : Int) : StudentResponse
}

type StudentResponse {
	id : Int
	firstName : String
	fullName: String
	lastName : String
	email : String
	address: AddressResponse
	learningSubjects: [SubjectResponse]
}

type SubjectResponse {
	id : Int
	subjectName : String
	marksObtained : Float
}

type AddressResponse {
	id : Int
	city : String!
	street : String
}